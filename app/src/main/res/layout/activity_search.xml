<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="vm" type="com.leopold.mvvm.ui.search.SearchViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/search_edit"
            android:layout_width="213dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:onTextChanged="@{(text, start, before, count) -> vm.onQueryChange(text)}"
            app:layout_constraintBottom_toBottomOf="@+id/search_button"
            app:layout_constraintRight_toLeftOf="@+id/search_button"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/search_button"
            android:layout_width="46dp"
            android:layout_height="52dp"
            android:layout_marginLeft="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="@{() -> vm.doSearch()}"
            android:src="@drawable/ic_search"
            app:layout_constraintEnd_toStartOf="@+id/liczbaElementow"
            app:layout_constraintLeft_toRightOf="@+id/search_edit"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/liczbaElementow"
            android:layout_width="65dp"
            android:layout_height="13dp"
            android:text="@{String.valueOf(vm.liczba)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_edit"
            app:layout_constraintVertical_bias="1.0"
            app:refreshing="@{safeUnbox(vm.refreshing)}">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:repositories="@{vm.items}"
                app:viewModel="@{vm}" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <Button
            android:id="@+id/buttonDodajJeden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            app:layout_constraintEnd_toStartOf="@+id/search_edit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
    <!--android:onClick="@{() -> vm.addOne()}"-->