<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="pointDialogModelView"
            type="com.leopold.mvvm.ui.mackowaActivity.PointDialogModelView" />
    </data>

    <LinearLayout
        android:id="@+id/contraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9C27B0"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="89dp"
                android:layout_height="51dp"
                android:text="Button" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="214dp"
                android:layout_height="52dp"
                android:text="CheckBox" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(pointDialogModelView.punkt.id)}" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(pointDialogModelView.punktyOsnowy.size())}" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{pointDialogModelView.punkt.name}" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/distanceToMarker1" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:background="#3F51B5"
                android:editable="true"
                android:enabled="true"
                android:focusable="auto"
                android:focusableInTouchMode="true"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinnerOsnowaPoint2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewDistanceToPoint2Label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/distanceToMarker2" />

            <TextView
                android:id="@+id/textViewDistanceToPoint2"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:background="#3F51B5"
                android:editable="true"
                android:enabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="TextView" />

        </LinearLayout>

    </LinearLayout>
</layout>
